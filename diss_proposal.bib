 @article{lisman_neohebbian_2011,
  title        = {A neoHebbian framework for episodic memory; role of dopamine-dependent late LTP},
  volume       = {34},
  issn         = {0166-2236},
  doi          = {10.1016/j.tins.2011.07.006},
  abstractnote = {According to the Hebb rule, the change in the strength of a synapse depends only on the local interaction of presynaptic and postsynaptic events. Studies at many types of synapses indicate that the early phase of long-term potentiation (LTP) has Hebbian properties. However, it is now clear that the Hebb rule does not account for late LTP; this requires an additional signal that is non-local. For novel information and motivational events such as rewards, this signal at hippocampal CA1 synapses is mediated by the neuromodulator, dopamine. In this Review, we discuss recent experimental findings that support the view that this “neoHebbian” framework can account for memory behavior in a variety of learning situations.},
